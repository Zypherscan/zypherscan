{
  "rewrites": [
    { "source": "/zebra", "destination": "/api/proxy-zebra" },
    { "source": "/zebra/(.*)", "destination": "/api/proxy-zebra?path=$1" },
    { "source": "/api-testnet", "destination": "/api/proxy-testnet" },
    { "source": "/api-testnet/(.*)", "destination": "/api/proxy-testnet?path=$1" },
    { "source": "/api/zypher", "destination": "/api/proxy-zypher" },
    { "source": "/api/zypher/(.*)", "destination": "/api/proxy-zypher?path=$1" },
    { "source": "/coingecko", "destination": "/api/proxy-coingecko" },
    { "source": "/coingecko/(.*)", "destination": "/api/proxy-coingecko?path=$1" },
    { "source": "/api/(.*)", "destination": "/api/proxy-mainnet?path=$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
