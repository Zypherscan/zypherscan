{
  "buildCommand": "pnpm run build",
  "framework": "vite",
  "installCommand": "pnpm install",
  "outputDirectory": "dist",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./",
  "rewrites": [
    {
      "source": "/api-testnet/:path*",
      "destination": "/api/proxy-testnet?path=:path*"
    },
    {
      "source": "/api/scan",
      "destination": "/api/scan"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/proxy-mainnet?path=:path*"
    },
    {
      "source": "/zebra/:path*",
      "destination": "/api/proxy-zebra?path=:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
